<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:orientation="vertical"
                android:background="#f4c1c0"
                android:padding="16dp">

                <!-- Icono de regreso -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="Icono de regreso"
                    tools:src="@android:drawable/ic_media_rew" />

                <!-- Imagen de usuario o marca -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="Logo o imagen" />

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Bienvenido!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <!-- Subtítulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicia sesión para continuar"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Campo: Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre:"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@android:drawable/editbox_background_normal" />

            <!-- Campo: Correo -->
            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo:"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@android:drawable/editbox_background_normal" />

            <!-- Campo: Contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña:"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>
    </ScrollView>

    <!-- Botón de acción principal (siempre al fondo) -->
    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Ingresar"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#f4c1c0" />
</LinearLayout>